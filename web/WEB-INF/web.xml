<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>ProductController</servlet-name>
        <servlet-class>ductmc.controller.ProductController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderController</servlet-name>
        <servlet-class>ductmc.controller.OrderController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>ductmc.controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>ductmc.controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>ductmc.controller.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddToCartController</servlet-name>
        <servlet-class>ductmc.controller.AddToCartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchController</servlet-name>
        <servlet-class>ductmc.controller.SearchController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateCartController</servlet-name>
        <servlet-class>ductmc.controller.UpdateCartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckDiscountController</servlet-name>
        <servlet-class>ductmc.controller.CheckDiscountController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateKeyCapController</servlet-name>
        <servlet-class>ductmc.controller.CreateKeyCapController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateKeyCapController</servlet-name>
        <servlet-class>ductmc.controller.UpdateKeyCapController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckoutCartController</servlet-name>
        <servlet-class>ductmc.controller.CheckoutCartController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductController</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderController</servlet-name>
        <url-pattern>/orders</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddToCartController</servlet-name>
        <url-pattern>/add-to-cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchController</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateCartController</servlet-name>
        <url-pattern>/update-cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckDiscountController</servlet-name>
        <url-pattern>/CheckDiscountController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateKeyCapController</servlet-name>
        <url-pattern>/CreateKeyCapController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateKeyCapController</servlet-name>
        <url-pattern>/UpdateKeyCapController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckoutCartController</servlet-name>
        <url-pattern>/CheckoutCartController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
